{
  "name": "promptor",
  "version": "1.0.0",
  "description": "AI-tutor slackbot",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "prepare": "husky",
    "generate": "drizzle-kit generate --config=drizzle.config.ts",
    "migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "push": "drizzle-kit push --config=drizzle.config.ts",
    "studio": "drizzle-kit studio"
  },
  "keywords": ["ai-tutor", "slackbot", "ai-sdk", "openai", "ai", "slack"],
  "author": "m.hurhangee@me.com",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@neondatabase/serverless": "^1.0.0",
    "@slack/web-api": "^7.9.1",
    "@vercel/functions": "^2.1.0",
    "ai": "^4.3.16",
    "drizzle-orm": "^0.43.1",
    "slackify-markdown": "^4.4.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^20.17.47",
    "drizzle-kit": "^0.31.1",
    "husky": "9.1.7",
    "lint-staged": "16.0.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": ["biome format --write .", "biome check --write ."]
  }
}
